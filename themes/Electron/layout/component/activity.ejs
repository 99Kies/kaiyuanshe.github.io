<%
const { permalink, title, description, start, end, address } = post;

const event = eventOf(title, description, start, end, address);
%>
<h2 class="d-flex justify-content-between">
  活动简讯
  <a class="btn btn-primary" download="<%= title %>.ics"
    href="<%= toDataURI(event + '', 'text/calendar') %>">
    添加日历
  </a>
</h2>
<ul>
  <li>时间：<%= full_date( start ) %> ~ <%= full_date( end ) %></li>
  <li>地点：<%= address %></li>
</ul>
<%
if ( address ) { %>
  <%-
    include('./marker_map', {
      markers: [{
        title, URL: permalink, address
      }]
    })
  %><%
} %>
