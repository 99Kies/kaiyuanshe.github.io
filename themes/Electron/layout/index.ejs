<div class="jumbotron jumbotron-home text-center">
  <div class="container">
    <div class="hero">
      <img src="<%= theme.banner %>">
    </div>
    <p class="jumbotron-lead">
      <%= config.subtitle %>
    </p>
  </div>
</div>

