<div class="subtron">
  <div class="container-narrow">
    <h1><%= config.title %> 博客</h1>
    <p class="lead mb-3">
      所有来自 <%= config.title %> 团队和社区的最新消息
    </p>
  </div>
</div>

<section class="page-section">
  <div class="container-narrow">
    <ul class="posts-list blog-index">
      <% page.posts.forEach(post => { %>
        <li class="mb-3 mb-md-4 mb-lg-6">
          <h2>
            <a class="blog-index-link mr-2" href="<%= post.path %>">
              <%= post.title %>
            </a>
            <%- include('./component/byline', { post }) %>
          </h2>
          <%- (post.excerpt || strip_html(post.content).slice(0, 300)) %>
          <p>
            <a href="<%= post.path %>">
              Read More&nbsp;
              <span class="octicon octicon-arrow-small-right"></span>
            </a>
          </p>
        </li>
      <% }) %>
    </ul>
  </div>
</section>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if (page.prev_link) { %>
      <li class="page-item">
        <a class="page-link" href="<%= page.prev_link %>">Previous</a>
      </li>
    <% } %>
    <% if (page.next_link) { %>
      <li class="page-item">
        <a class="page-link" href="<%= page.next_link %>">Next</a>
      </li>
    <% } %>
  </ul>
</nav>
